<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/task_frame">

    <TextView
        android:id="@+id/textView_employeeitem_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="First name"
        android:textSize="20sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/textView_employeeitem_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_employeeitem_name"
        android:paddingLeft="10dp"
        android:text="email"
        android:textSize="17sp"
        android:textColor="@color/white"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_employeeitem_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/button_background"
        android:layout_centerInParent="true"
        android:layout_alignParentEnd="true"
        android:text="Delete"/>

</RelativeLayout>